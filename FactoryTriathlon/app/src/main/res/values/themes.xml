<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FactoryTriathlon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textoNormal">

        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textoEditable">

        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="botonAmarillo" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorPrimary">@color/amarilloClaro</item>
    </style>
    <style name="botonGrisClaro" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorPrimary">@color/azul</item>
    </style>

    <style name="contenedorRegistro" >
        <item name="android:background">@color/grisTransparente</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>